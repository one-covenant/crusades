{
    "spec_version": 1,
    "netuid": 3,
    "burn_rate": 0.95,
    "burn_uid": 1,

    "evaluation_runs": 5,
    "eval_steps": 5,
    "eval_timeout": 600,
    "min_success_rate": 0.5,

    "benchmark_model_name": "Qwen/Qwen2.5-3B",
    "benchmark_dataset_name": "HuggingFaceFW/fineweb",
    "benchmark_dataset_split": "train",
    "benchmark_data_samples": 10000,
    "benchmark_master_seed": 42,
    "benchmark_sequence_length": 1024,
    "benchmark_batch_size": 4,

    "set_weights_interval_blocks": 100,

    "reveal_blocks": 100,
    "min_blocks_between_commits": 300,
    "block_time": 12,

    "docker": {
        "gpu_devices": "0,1",
        "memory_limit": "64g",
        "shm_size": "16g"
    },

    "basilica": {
        "image": "ghcr.io/one-covenant/templar-eval:latest",
        "ttl_seconds": 3600,
        "gpu_count": 1,
        "gpu_models": ["A100"],
        "min_gpu_memory_gb": 40,
        "cpu": "4",
        "memory": "32Gi"
    },

    "verification": {
        "deterministic_mode": true,
        "use_random_init": true,
        "loss_ratio_min": 0.8,
        "loss_ratio_max": 1.2,
        "min_trainable_params_ratio": 1.0,
        "min_params_changed_ratio": 0.8,
        "gradient_cosine_min": 0.8,
        "gradient_norm_ratio_min": 0.5,
        "gradient_norm_ratio_max": 2.0
    },

    "mfu": {
        "gpu_peak_tflops": 312.0,
        "model_params_billions": 3.0
    },

    "adaptive_threshold": {
        "base_threshold": 0.01,
        "max_threshold": 0.50,
        "decay_rate": 0.95,
        "decay_interval_blocks": 100,
        "improvement_multiplier": 2.0
    }
}
